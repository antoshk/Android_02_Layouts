<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#42A5F5">

    <Button
        android:id="@+id/create_thread_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CRAETE"
        app:layout_constraintEnd_toStartOf="@id/start_thread_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.33" />

    <Button
        android:id="@+id/start_thread_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="START"
        app:layout_constraintEnd_toStartOf="@+id/cancel_thread_button"
        app:layout_constraintStart_toEndOf="@+id/create_thread_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".33" />

    <Button
        android:id="@+id/cancel_thread_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/start_thread_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".33" />

    <TextView
        android:id="@+id/threads_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B2D5F1"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Output"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>